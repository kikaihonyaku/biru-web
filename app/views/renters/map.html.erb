			suumo_all_summary = suumo_all_summary + suumo_all
			room_cnt = room_cnt + 1;
				  
		});
		
		
		if( room_cnt > 0 ){
			suumo_pic = suumo_all_summary / room_cnt;
		}
		else{
			suumo_pic = 0;
		}
		
		if(suumo_pic == 20){
			icon_url = "marker_blue.png"
		} else if(suumo_pic >= 10){
			icon_url = "marker_yellow.png"
			
		} else{
