      if(this.checked){
        $("#chiba_center input").prop("checked", true);
        $("#chiba_north input").prop("checked", true);
      } else{
        $("#chiba_center input").attr("checked", false);
        $("#chiba_north input").attr("checked", false);
      }
    });

  });

