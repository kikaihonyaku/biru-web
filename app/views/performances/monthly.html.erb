<%= render :partial=>'sidebar', :locals=>{:val => 1} %>

<!-- 計画が存在する時、達成率の表を作る -->
<% if @plan_exists %>

  <div style="text-align: center;padding:5px;margin-top:20px;font-size: medium;margin-bottom:5px;"><%= @graph_name + '(' + @item.name +  ')の計画比' %></div>
  <table class="table table-striped table-bordered table-condensed" style="margin-bottom:20px;">
  <% @result_arr.each_with_index do |result, i| %>
    <% if i == 0 %>
      <!-- ヘッダ -->
      <thead>
        <tr>
          <th style="text-align:center">&nbsp;</th>
          <% result['categories'].each do |cate| %>
            <th style="text-align:center"><%= cate.slice(0,4) + '/' + cate.slice(4,2) %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
    <% end %>

        <tr>
          <td style="text-align:center"><%= result['dept_name'] %></td>
          <% result['categories'].each_with_index do |cate, i| %>
            <% value = BigDecimal("#{result['this_year_results'][i]/result['this_year_plans'][i]*100}").floor(1) %>

            <% if value >= 100 %>
              <td style="text-align:center;background-color: #a9dba9;"><%= sprintf("%.1f", value)  %></td>
            <% elsif value < 80 %>
              <td style="text-align:center;background-color: lightpink;"><%= sprintf("%.1f", value)  %></td>
            <% else %>
              <td style="text-align:center"><%= sprintf("%.1f", value)  %></td>
            <% end %>

          <% end %>
        </tr>

  <% end %>
    </tbody>
  </table>

<% end %>

<!-- 前年データがある時、前年対比の表を作る -->
<% if @prev_result_exists %>

  <div style="padding-top:20px;"></div>

  <div style="text-align: center;padding:5px;margin-top:20px;font-size: medium;margin-bottom:5px;"><%= @graph_name + '(' + @item.name +  ')の前年対比' %></div>
  <table class="table table-striped table-bordered table-condensed" style="margin-bottom:20px;">
  <% @result_arr.each_with_index do |result, i| %>
    <% if i == 0 %>
      <!-- ヘッダ -->
      <thead>
        <tr>
          <th style="text-align:center">&nbsp;</th>
          <% result['categories'].each do |cate| %>
            <th style="text-align:center"><%= cate.slice(0,4) + '/' + cate.slice(4,2) %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
    <% end %>

        <tr>
          <td style="text-align:center"><%= result['dept_name'] %></td>
          <% result['categories'].each_with_index do |cate, i| %>
            <% value = BigDecimal("#{result['this_year_results'][i]/result['prev_year_results'][i]*100}").floor(1) %>

            <% if value >= 100 %>
              <td style="text-align:center;background-color: #a9dba9;"><%= sprintf("%.1f", value)  %></td>
            <% elsif value < 80 %>
              <td style="text-align:center;background-color: lightpink;"><%= sprintf("%.1f", value)  %></td>
            <% else %>
              <td style="text-align:center"><%= sprintf("%.1f", value)  %></td>
            <% end %>

          <% end %>
        </tr>

  <% end %>
    </tbody>
  </table>

<% end %>

<!-- 折れ線グラフを表示する -->
<% if @group_result %>

  <div style="text-align: right;margin-top:80px;" ><%= high_chart("gropu_result-1", @group_result) %></div>
<% end %>

<!-- ショートカットを作成 -->
<div style="margin-top:30px;text-align: left;padding-left:20px;">
  <% @result_arr.each_with_index do |result, i| %>
  <span style="margin-right:20px;">
    <a href="javascript:void(0);" onclick="openClose('p_4000<%= i %>','p_4000<%= i %>_detail', '<%= result['dept_name'] %>' );"><span id="p_4000<%= i %>_detail">内訳を表示</span></a>
  </span>
  <% end %>

</div>

<!-- 戻り値分　繰り返す -->
<% @result_arr.each_with_index do |result, i| %>

  <div style="text-align: center;margin-bottom: 100px;" id="p_4000<%= i %>">
    
    <div style="text-align: right;margin: 0 auto;margin-bottom: 5px;"><%= high_chart("cumulative-" + i.to_s, result['graph_cumulative']) %></div>

    <table class="table table-striped table-bordered table-condensed" id="p_3000<%= i %>" style="margin-bottom:80px;">
      <thead>
        <tr>
          <th style="text-align:center">&nbsp;</th>
          <% result['categories'].each do |cate| %>
            <th style="text-align:center"><%= cate %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td style="text-align:center">計画</td>
          <% sum = 0 %>
          <% result['this_year_plans'].each do |rec| %>
            <td style="text-align:center"><%= (rec / @item_calc.to_f).round %></td>
            <% sum = sum + rec %>
          <% end %>
        </tr>
        <tr>
          <td style="text-align:center">実績</td>
          <% sum = 0 %>
          <% result['this_year_results'].each do |rec| %>
            <td style="text-align:center"><%= (rec / @item_calc.to_f).round %></td>
            <% sum = sum + rec %>
          <% end %>
        </tr>
        <tr>
          <% sum = 0 %>
          <td style="text-align:center">前年実績</td>
          <% result['prev_year_results'].each do |rec| %>
            <td style="text-align:center"><%= (rec / @item_calc.to_f).round %></td>
            <% sum = sum + rec %>
          <% end %>
        </tr>
      </tbody>

    </table>
    
    <div style="text-align: right;margin: 0 auto;margin-bottom: 80px;"><%= high_chart("chart-" + i.to_s, result['graph_plan']) %></div>

    <% if result['graph_years'] %>
      <div style="text-align: right;margin: 0 auto;"><%= high_chart("years-" + i.to_s, result['graph_years']) %></div>
    <% end %>

  </div>

<% end %>



<% @result_arr.each_with_index do |result, i| %>
<script type="text/javascript">
