        data: yyyymm_data,
        saveState: 'c-yyyymm'
    });

    $('#tree-item').bind('tree.select',　
      function(event) {
        if (event.node) {
          // もしも選択されたNodeが非選択対象(3000以上)だったら、選択状態を解除
          var node = event.node;
          var num = parseInt(node.id);
          if(isNaN(num) == false){
            if(num >= 6000){
              $('#tree-item').tree('removeFromSelection', node);
            }
          }
        }
      }
    );

