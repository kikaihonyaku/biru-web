<%# export for csv %>

<%= grid(@trust_arr,  upper_pagination_panel: true ) do |g|
	g.column name: '管理営業所' do |obj| obj.building.shop.name if obj.building && obj.building.shop end
	g.column name: '貸主CD' do |obj|  obj.owner.attack_code  if obj.owner end	
	g.column name: '貸主名' do |obj| obj.owner.name    if obj.owner end	
	g.column name: '貸主住所' do |obj| obj.owner.address if obj.owner end
	g.column name: '建物CD'  do |obj| obj.building.attack_code if obj.building end
	g.column name: '建物名'  do |obj| obj.building.name if obj.building end
	g.column name: '建物住所' do |obj| obj.building.address if obj.building end

end
%>	